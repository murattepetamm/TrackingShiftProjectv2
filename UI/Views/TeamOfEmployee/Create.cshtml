@model Entities.Concrete.TeamsOfEmployee

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TeamsOfEmployee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee" class="control-label"></label>
                @Html.DropDownListFor(m => m.EmployeeId, (IEnumerable<SelectListItem>)ViewBag.employee, "Please select")
