@model Entities.Concrete.ShiftOfTeam

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ShiftOfTeam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShiftName" class="control-label"></label>
                @Html.DropDownListFor(m => m.ShiftId, (IEnumerable<SelectListItem>)ViewBag.getShiftName, "Please select")
                <span asp-validation-for="ShiftName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                @Html.DropDownListFor(m => m.TeamId, (IEnumerable<SelectListItem>)ViewBag.getTeamName, "Please select")
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <li>
                    <p>@ViewBag.TeamErrorMessage</p>
                </li>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
